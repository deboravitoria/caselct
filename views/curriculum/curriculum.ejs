<%- include("../partials/header"); %>

<form id="editar" action="/curriculum/lista/<%= curriculum._id %>?_method=PUT" method="POST">
  <div class="form-group">
    <label for="inputFullName">Nome Completo</label>
    <input type="name" class="form-control" id="inputFullName" name="curriculum[name]" value="<%= curriculum.name %>">
  </div>
  <div class="form-group">
    <label for="inputTell">Telefone para contato</label>
    <input type="tell" class="form-control" id="inputTell" name="curriculum[tell]" value="<%= curriculum.tell %>">
  </div>
  <div class="form-group">
    <label for="inputEmail">Email</label>
    <input type="email" class="form-control" id="inputEmail" name="curriculum[email]" value="<%= curriculum.email %>">
  </div>
  <div class="form-group">
    <label for="inputHabilities">Principais habilidades</label>
    <input type="habilities" class="form-control" id="inputHabilities" name="curriculum[habilities]" value="<%= curriculum.habilities %>">
  </div>
</form>

<button form="editar" type="submit" class="btn btn-warning">Salvar</button>
<a href="/curriculum/lista"><button type="submit" class="btn btn-primary">Voltar</button></a>

<%- include("../partials/footer"); %>